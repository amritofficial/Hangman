<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.amritsingh.hangman.MainActivity"
    android:orientation="horizontal"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView2"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/mainstage" />

    <Button
        android:text="Menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu"
        android:background="@android:color/transparent"
        android:textSize="40dp"
        android:paddingTop="30dp"
        android:textColor="@drawable/button_pressed"
        android:onClick="menuOption"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:shadowColor="@color/brown"
        android:shadowRadius="10"
        android:shadowDx="5"
        android:shadowDy="-8"/>

    <Button
        android:text="New Game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newGame"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@drawable/button_pressed"
        android:background="@android:color/transparent"
        android:textSize="40dp"
        android:onClick="buttonClick"
        android:layout_alignBottom="@+id/menu"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:shadowColor="@color/brown"
        android:shadowRadius="10"
        android:shadowDx="5"
        android:shadowDy="-8"/>

    <Button
        android:text="Scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highScore"
        android:background="@android:color/transparent"
        android:textSize="40dp"
        android:textAlignment="center"
        android:paddingTop="0dp"
        android:textColor="@drawable/button_pressed"
        android:onClick="menuOption"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/menu"
        android:layout_centerHorizontal="true"
        android:shadowColor="@color/brown"
        android:shadowRadius="10"
        android:shadowDx="5"
        android:shadowDy="-8"/>

    <Button
        android:text="Quit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/quit"
        android:background="@android:color/transparent"
        android:textSize="40dp"
        android:paddingTop="10dp"
        android:textColor="@drawable/button_pressed"
        android:onClick="menuOption"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/highScore"
        android:layout_centerHorizontal="true"
        android:shadowColor="@color/brown"
        android:shadowRadius="10"
        android:shadowDx="5"
        android:shadowDy="-8"/>


</RelativeLayout>
